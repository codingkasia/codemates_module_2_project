    <div class="row">
        <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="thumbnail">
                   
                        <h1>Create Your Account</h1>
                        <%= form_for(@user) do |f| %> 
                            <%= f.label :username %>
                            <%= f.text_field :username %>
                            <%= f.label :password %>
                            <%= f.password_field :password %>
                            <%= f.label :password_confirmation %>
                            <%= f.password_field :password_confirmation %>
                            <%=f.label :location %>
                            
                            <%= f.collection_select :location_id, Location.all, :id, :city, {prompt: true} %>
                            <%=f.label :cohort %>
                            <%= f.collection_select :cohort_id, Cohort.all, :id, :semester, {prompt: true} %>
                            
                            <%=f.hidden_field :roomate, :value => false %>
                            <%= f.submit %>
                        <% end %>
                        
                                </div>
                            </form>
                        </div>
                    </div>  
                </div>
                <div class="col-md-3"></div>
    </div>
</div>











