
<%= form_for(@user) do |f| %> <!-- should post to /users not /users/new -->
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%=f.label :location %>
    
     <%= f.collection_select :location_id, Location.all, :id, :city, {prompt: true} %>
     <%=f.label :cohort %>
     <%= f.collection_select :cohort_id, Cohort.all, :id, :semester, {prompt: true} %>
     <%=f.hidden_field :roomate, :value => false %>
     
    <%= f.submit %>
<% end %>